<%= form_for @team do |f| %>

  <% if @team.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@team.errors.count, "error") %> cannot set new team:
      </h2>
      <ul>
        <% @team.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :'Team Name:' %><br>
    <%= f.text_field :name %>
  </p>


  <p>
    <%= f.submit %>
  </p>

<% end %>
